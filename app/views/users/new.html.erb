<h1>Signup</h1>
<table>
<%= form_for :user, url: '/users' do |form| %>
  <tr>
  <th><%= form.label :firstname %></th>
  <th><%= form.text_field :first_name %></th>
  </tr>
    
  <tr>
  <th><%= form.label :lastname %></th>
  <th><%= form.text_field :last_name %></th>
  </tr>
    
  <tr>
  <th><%= form.label :email %></th>
  <th><%= form.text_field :email %></th>
  </tr>

  <tr>
  <th><%= form.label :password %></th>
  <th><%= form.password_field :password %></th>
  </tr>
  
  <tr>
  <th><%= form.label :confirmpassword %></th>
  <th><%= form.password_field :password_confirmation %></th>
  </tr>
  <tr>
  <%= form.submit "Create", class: "btn btn-primary" %>
  </tr>

  </table>
<div>
  <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |message|  %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
</div>
<% end %>